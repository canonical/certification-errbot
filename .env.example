# Example environment variables for certification-errbot
# Copy this file to .env and fill in your actual values

# Errbot configuration
ERRBOT_SERVER=chat.canonical.com
ERRBOT_ADMINS=@your_username
ERRBOT_TOKEN=your_mattermost_bot_token
ERRBOT_TEAM=canonical

# C3 (Certification Database) API
C3_CLIENT_ID=your_c3_client_id
C3_CLIENT_SECRET=your_c3_client_secret

# GitHub API
GITHUB_TOKEN=your_github_token
GITHUB_ORG=canonical

# LDAP Configuration
LDAP_SERVER=ldap://your.ldap.server
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=bind_user,dc=example,dc=com
LDAP_BIND_PASSWORD=your_ldap_bind_password